<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">课题管理</h1>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<!-- /.col-lg-12 -->
		<ul class="nav nav-tabs nav-pills" >
			<li class="active">
				<a href="#lA" data-toggle="tab">我的课题</a>
			</li>
			<li class="">
				<a href="#lB" data-toggle="tab" onclick="update_other_titles();">其他老师课题</a>
			</li>
		</ul>
		<div class="tab-content">
			<div class="tab-pane active" id="lA">
				<div class="panel panel-default">
					<div class="panel-heading">添加课题</div>
					<!-- /.panel-heading -->
					<div class="panel-body">
						<table id="title-new" class="table table-striped table-bordered table-hover dataTable no-footer">
							<thead>
								<tr>
									<th>题目</th>
									<th>学生类型</th>
									<th>可选人数</th>
									<th>操作</th>
								</tr>
							</thead>
							<tbody>
								<tr id="my_title_add">
									<td>
										<input id="content" value="" class="form-control"></td>
									<td>
										<input id="stype" value="" class="form-control"></td>
									<td>
										<input id="capacity" value="" class="form-control"></td>
									<td>
										<a id="add_my_title" onclick="add_my_title();" class="btn btn-primary btn-sm col-md-14">添加</a>
									</td>
								</tr>
							</tbody>

						</table>
					</div>
				</div>
				<div class="panel panel-default">
					<div class="panel-heading">我已发布的课题</div>
					<!-- /.panel-heading -->
					<div class="panel-body">
						<table id="my_titles" class="table table-striped table-bordered table-hover dataTable no-footer">
							<thead>
								<tr>
									<th>ID</th>
									<th>题目</th>
									<th>学生类型</th>
									<th>可选人数</th>
									<th>操作</th>
								</tr>
								</tr>
							</thead>

						</table>
					</div>
				</div>
			</div>
			<div class="tab-pane" id="lB" style="margin-top:7px;">
				<table id="other_titles" class="table table-striped table-bordered table-hover dataTable no-footer">
					<thead>
						<tr>
							<th>ID</th>
							<th>题目</th>
							<th>学生类型</th>
							<th>可选人数</th>
							<th>教师姓名</th>
						</tr>
					</thead>

				</table>
			</div>

		</div>
	</div>
</div>

</div>