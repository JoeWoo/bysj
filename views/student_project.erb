<div>
	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header"> <%= @project_title.content%>|<%= @project_title.tname%></div></h1>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<!-- /.col-lg-12 -->
			<div style="width:897px;height:164px;background:url(/vendor/img/processbg.png) no-repeat 0px -20px;">

			</div>
			<div class="progress" style="margin-top:-100px;">
				  <div class="progress-bar progress-bar-success" style= <%="\"width:#{@project_title.stat}\""%>
				    <span class="sr-only"><%= @project_title.stat%> Complete</span>
				  </div>
				</div>
	<div class="panel-group" id="accordion" style="margin-top:90px;">

			               <div class="panel panel-default">
                           <div class="panel-heading">
                                <h4 class="panel-title">
                                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree" class="collapsed"> <i class="fa fa-upload fa-fw"></i> 提交项目文件</a>
                                                </h4>
                                </div>

                        <!-- /.panel-heading -->
                         <div id="collapseThree" class="panel-collapse collapse" style="height: 0px;">
                        <div class="panel-body">

            <div class="col-md-6 col-md-offset-3" style="margin-top:-100px;">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">文件提交</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="/secure/student/upload_files" enctype="multipart/form-data" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="文件主题" name="subject" type="text" autofocus="">
                                </div>
                                <div class="form-group">
                                	<select class="form-control"  name="milestone" value="普通">
                                		 <option>普通</option>
							  <option>开题</option>
							  <option>中期</option>
							  <option>结题</option>
						    </select>
                                </div>
                                 <div class="form-group">
                                    <input  name="file" type="file" value="">
                                </div>
                                <div class="form-group">
                                 <textarea  name="commits" class="form-control" placeholder="补充说明"  rows="3"></textarea>
                                </div>

                                <!-- Change this to a button or input when using this as a form -->
                                <input type="submit" class="btn btn-lg btn-success btn-block"></input>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>

                        </div>
                      </div>
                        <!-- /.panel-body -->
                    </div>


		       <div class="panel panel-default">
		                   <div class="panel-heading">
		                        <h4 class="panel-title">
		                                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" class="collapsed" onclick="update_stu_files_record();"> <i class="fa fa-clock-o fa-fw"></i> 提交与批阅记录</a>
		                                        </h4>
		                        </div>

                        <!-- /.panel-heading -->
                         <div id="collapseOne" class="panel-collapse collapse" style="height: 0px;">
                        <div class="panel-body">
                            <ul class="timeline" id="stu_files_record">

                            </ul>
                        </div>
                      </div>
                        <!-- /.panel-body -->
                    </div>


                            <div class="chat-panel panel panel-default">
	                        	<div class="panel-heading">
	                        	 <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" class="collapsed" onclick="update_message();">  <i class="fa fa-comments fa-fw"></i>
	                            聊天</a>
                                 </h4>

	                        </div>
                        <!-- /.panel-heading -->
                         <div id="collapseTwo" class="panel-collapse collapse">
                        <div class="panel-body">
                            <ul class="chat" id="message_record" >


                            </ul>
                        </div>
                        <!-- /.panel-body -->
                        <div class="panel-footer">
                            <div class="input-group">
                                <input id="btn-input" type="text" class="form-control input-sm" placeholder="键入您的留言...">
                                <span class="input-group-btn">
                                    <button class="btn btn-warning btn-sm" id="btn-chat" onclick="send_message();">
                                        发送
                                    </button>
                                </span>
                            </div>
                        </div>
                      </div>
                        <!-- /.panel-footer -->
                    </div>
                        </div>
                    </div>
                  </div>
</div>
